{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleDetection": "force",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src", "./types"],
  "exclude": ["../node_modules", "./dist", "**/*.test.ts", "**/*.spec.ts"]
}
