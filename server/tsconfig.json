{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Emit JS for server build
    "noEmit": false,

    // Proper ESM build structure
    "rootDir": "src",
    "outDir": "dist/server/src",

    // Required for NodeNext TS â†’ JS extension rewriting
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": false
  },

  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
