{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "server/src/routes/**/*",
    "server/src/services/**/*",
    "server/src/utils/**/*",
    "server/src/schemas/**/*",
    "server/src/types/**/*",
    "server/src/index.ts"
  ]
}
