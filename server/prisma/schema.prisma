generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Silo {
  BF
  BI
  SLF
}

enum DocumentStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum ApplicationStage {
  NEW
  IN_REVIEW
  REQUIRES_DOCS
  READY_FOR_LENDERS
  SENT_TO_LENDER
  ACCEPTED
  DECLINED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  silos     Silo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications Application[]
  documents     Document[]
}

model Application {
  id            String            @id @default(uuid())
  silo          Silo
  businessName  String
  amount        Int
  stage         ApplicationStage  @default(NEW)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  userId String
  user   User      @relation(fields: [userId], references: [id])

  documents Document[]
}

model Document {
  id            String          @id @default(uuid())
  silo          Silo
  name          String
  category      String?
  mimeType      String
  sizeBytes     Int
  s3Key         String
  status        DocumentStatus  @default(PENDING)
  checksum      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  applicationId String
  application   Application @relation(fields: [applicationId], references: [id])

  userId String
  user   User        @relation(fields: [userId], references: [id])
}

model Lender {
  id        String   @id @default(uuid())
  name      String
  silo      Silo
  email     String?
  createdAt DateTime @default(now())

  products LenderProduct[]
}

model LenderProduct {
  id           String   @id @default(uuid())
  silo         Silo
  lenderId     String
  name         String
  minAmount    Int?
  maxAmount    Int?
  country      String?
  createdAt    DateTime @default(now())

  lender Lender @relation(fields: [lenderId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  silo      Silo
  userId    String?
  message   String
  createdAt DateTime @default(now())
}

