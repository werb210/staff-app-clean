{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server/src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["__tests__", "tests", "e2e", "node_modules"]
}
