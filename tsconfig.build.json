{
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server/src",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["server/src/__tests__"]
}
