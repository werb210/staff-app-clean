{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": "server/src",
    "outDir": "dist",

    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": false
  },
  "include": ["server/src"],
  "exclude": ["node_modules", "server/src/__tests__"]
}
