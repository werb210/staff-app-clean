generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts     Contact[]
  companies    Company[]
  applications Application[]
  notifications Notification[]
  tokens         UserToken[]
}

model Contact {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String?
  phone     String?
  userId    String?
  companyId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?      @relation(fields: [userId], references: [id])
  company   Company?   @relation(fields: [companyId], references: [id])
  smsQueues SmsQueue[]
}

model Company {
  id        String   @id @default(uuid())
  name      String
  website   String?
  phone     String?
  address   String?
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User?         @relation(fields: [userId], references: [id])
  contacts     Contact[]
  applications Application[]
}

model Application {
  id              String   @id @default(uuid())
  companyId       String
  userId          String?
  amountRequested Int
  productType     String
  status          String   @default("new")
  businessName    String   @default("")
  email           String   @default("")
  phone           String   @default("")
  stageId         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  company     Company          @relation(fields: [companyId], references: [id])
  user        User?            @relation(fields: [userId], references: [id])
  stage       PipelineStage?   @relation(fields: [stageId], references: [id])
  deals       Deal[]
  financials  Financials[]
  moveLogs    PipelineMoveLog[]
  ocrExtracts OcrExtract[]
  tags        ApplicationTag[]
  smsQueues   SmsQueue[]
}

model PipelineStage {
  id           String        @id @default(uuid())
  name         String
  order        Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  applications Application[]
  moveLogs     PipelineMoveLog[]
}

model Deal {
  id             String   @id @default(uuid())
  applicationId  String
  lenderId       String
  status         String
  offerAmount    Int
  terms          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  application Application @relation(fields: [applicationId], references: [id])
  lender      Lender      @relation(fields: [lenderId], references: [id])
}

model Financials {
  id            String    @id @default(uuid())
  applicationId String?
  data          Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  application Application? @relation(fields: [applicationId], references: [id])
}

model PipelineMoveLog {
  id            String   @id @default(uuid())
  applicationId String
  stageId       String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id])
  stage       PipelineStage @relation(fields: [stageId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model UserToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  type      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model OcrExtract {
  id            String   @id @default(uuid())
  applicationId String
  documentId    String
  payload       Json
  summary       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  application Application @relation(fields: [applicationId], references: [id])
}

model Product {
  id          String  @id @default(uuid())
  name        String
  category    String
  country     String
  minAmount   Int
  maxAmount   Int
  description String?

  lenderId String?
  lender   Lender? @relation(fields: [lenderId], references: [id])
}

model Lender {
  id        String   @id @default(uuid())
  name      String
  website   String?
  email     String?
  phone     String?
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  deals    Deal[]
}

model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications ApplicationTag[]
}

model ApplicationTag {
  applicationId String
  tagId         String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id])
  tag         Tag         @relation(fields: [tagId], references: [id])

  @@id([applicationId, tagId])
}

model SmsQueue {
  id                String    @id @default(uuid())
  to                String
  body              String
  status            String
  providerMessageId String?
  error             String?
  attempts          Int       @default(0)
  applicationId     String?
  contactId         String?
  sentAt            DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  application Application? @relation(fields: [applicationId], references: [id])
  contact     Contact?     @relation(fields: [contactId], references: [id])
}
