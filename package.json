{
  "name": "staff-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch server/src/index.ts",

    "prebuild": "node scripts/prisma-generate.mjs",
    "clean": "node scripts/clean.mjs",

    "postinstall": "node scripts/prisma-generate.mjs",
    "migrate": "tsx server/src/db/migrator.ts",
    "generate:migration": "drizzle-kit generate",
    "push:migration": "drizzle-kit push",
    "typecheck": "tsc -p server/tsconfig.json --noEmit",

    "build": "tsc -p server/tsconfig.json",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@azure/storage-blob": "12.29.1",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "body-parser": "1.20.3",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.32.0",
    "express": "4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "8.13.1",
    "twilio": "^5.10.5",
    "uuid": "9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "1.19.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.11.30",
    "@types/pg": "8.11.6",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "0.24.1",
    "tsx": "4.20.6",
    "typescript": "5.4.5"
  }
}
