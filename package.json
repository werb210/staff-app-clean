{
  "name": "staff-server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch server/src/index.ts",
    "start": "node --env-file=.env server/src/index.js || tsx server/src/index.ts",
    "build": "tsc --project server/tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --fix",
    "migrate": "tsx server/src/db/migrator.ts",
    "generate:migration": "drizzle-kit generate",
    "push:migration": "drizzle-kit push"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.18.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "drizzle-zod": "^0.8.0",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "drizzle-kit": "^0.24.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  }
}
