{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "server/src",
    "outDir": "server/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "server/dist"]
}
